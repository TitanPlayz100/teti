{
  "name": "teti",
  "version": "1.0.0",
  "description": "electron build of teti",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "dist": "electron-builder"
  },
  "author": "titanplayz",
  "license": "ISC",
  "devDependencies": {
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.electron.app",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "portable": {
      "unicode": false,
      "artifactName": "teti-portable.exe"
    },
    "nsis": {
      "oneClick": true,
      "installerIcon": "assets/titanicon.ico",
      "runAfterFinish": true,
      "createDesktopShortcut": true
    }
  }
}
